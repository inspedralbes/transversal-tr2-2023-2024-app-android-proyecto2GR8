<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalaActivity"
    android:background="#ADD8E6">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@drawable/background_rounded_button"
      android:layout_margin="100px"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:text="CODI DE LA SALA:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25px"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/background_rounded"/>
    <TextView
        android:id="@+id/tvCodiClasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CODI"
        android:background="@drawable/background_rounded"
        android:layout_marginHorizontal="150px"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:background="@drawable/background_rounded"
        android:layout_marginHorizontal="250px"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIniciar"
        android:background="@drawable/background_rounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="COMENÃ‡AR"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@drawable/background_rounded">
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvJugadors"
          android:paddingTop="70px"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
          />
    </LinearLayout>



  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>